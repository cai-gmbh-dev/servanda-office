# ============================================================
# Servanda Office â€” Environment Configuration
# Copy to .env and adjust values for your environment
# ============================================================

# --- Application ---
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql://servanda:servanda_dev@localhost:5432/servanda_office?schema=public

# --- Object Storage (S3 / MinIO) ---
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=servanda-office-dev
S3_REGION=eu-central-1

# --- Auth (Keycloak) ---
OIDC_ISSUER_URL=http://localhost:8080/realms/servanda
OIDC_CLIENT_ID=servanda-office
OIDC_CLIENT_SECRET=change-me-in-production

# --- Export Worker ---
EXPORT_WORKER_CONCURRENCY=2
EXPORT_JOB_TIMEOUT_SECONDS=120

# --- OpenSearch (Full-Text Search) ---
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# --- Feature Flags ---
FEATURE_ODT_EXPORT=false
FEATURE_OPENSEARCH=false

# --- Frontend ---
VITE_API_URL=http://localhost:3000/api
