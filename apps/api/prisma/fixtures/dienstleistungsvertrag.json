      "interviewFlow": {
        "title": "Dienstleistungsvertrag Interview",
        "questions": [
          {
            "key": "dienstleistung_beschreibung",
            "type": "text",
            "label": "Welche Dienstleistungen sollen erbracht werden?",
            "required": true,
            "helpText": "Beschreiben Sie die zu erbringenden Dienstleistungen möglichst konkret. Detaillierte Leistungsbeschreibungen können in Anlage 1 ergänzt werden."
          },
          {
            "key": "verguetung",
            "type": "currency",
            "label": "Wie hoch ist die vereinbarte Vergütung (EUR)?",
            "required": true,
            "helpText": "Geben Sie den Betrag in Euro ein. Die Vergütungsart (pauschal, pro Stunde oder pro Monat) wählen Sie im nächsten Schritt."
          },
          {
            "key": "verguetung_typ",
            "type": "single_choice",
            "label": "Welche Vergütungsart soll gelten?",
            "required": true,
            "options": [
              { "value": "pauschal", "label": "Pauschalvergütung" },
              { "value": "pro Stunde", "label": "Stundenvergütung" },
              { "value": "pro Monat", "label": "Monatliche Vergütung" }
            ],
            "helpText": "Wählen Sie die Abrechnungsform für die Vergütung."
          },
          {
            "key": "zahlungsfrist",
            "type": "number",
            "label": "Zahlungsfrist in Tagen nach Rechnungseingang?",
            "required": false,
            "default": 14,
            "helpText": "Üblich sind 14 oder 30 Tage. Bei Nichtangabe gelten 14 Tage."
          },
          {
            "key": "vertragsbeginn",
            "type": "date",
            "label": "Wann soll der Vertrag beginnen?",
            "required": true,
            "helpText": "Datum des Vertragsbeginns."
          },
          {
            "key": "kuendigungsfrist",
            "type": "text",
            "label": "Welche Kündigungsfrist soll gelten?",
            "required": false,
            "default": "3 Monate",
            "helpText": "Üblich sind 1 bis 3 Monate zum Monatsende."
          },
          {
            "key": "vertraulichkeit_gewuenscht",
            "type": "yes_no",
            "label": "Soll eine Vertraulichkeitsklausel aufgenommen werden?",
            "required": true,
            "default": true,
            "helpText": "Empfohlen, wenn im Rahmen der Dienstleistung vertrauliche Informationen ausgetauscht werden."
          },
          {
            "key": "vertraulichkeit_dauer",
            "type": "text",
            "label": "Wie lange soll die Vertraulichkeitspflicht nach Vertragsende gelten?",
            "required": false,
            "default": "2 Jahre",
            "helpText": "Üblich sind 1 bis 5 Jahre nach Vertragsende.",
            "conditions": [
              {
                "questionKey": "vertraulichkeit_gewuenscht",
                "operator": "equals",
                "value": true,
                "logic": "show"
              }
            ]
          },
          {
            "key": "maengelfrist",
            "type": "number",
            "label": "Frist zur Mängelbeseitigung (Werktage)?",
            "required": false,
            "default": 10,
            "helpText": "Innerhalb dieser Frist muss der Auftragnehmer angezeigte Mängel beseitigen."
          },
          {
            "key": "haftungssumme",
            "type": "currency",
            "label": "Bis zu welchem Betrag soll die Haftung begrenzt werden (EUR)?",
            "required": true,
            "helpText": "Die Haftungsbegrenzung gilt nicht bei Vorsatz oder grober Fahrlässigkeit."
          }
        ]
      }
    }
  ]
