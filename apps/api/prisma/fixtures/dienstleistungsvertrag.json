{
  "clauses": [
    {
      "title": "Vertragsgegenstand DV",
      "jurisdiction": "DE",
      "legalArea": "Dienstleistungsrecht",
      "tags": ["dienstleistungsvertrag", "vertragsgegenstand"],
      "versions": [
        {
          "content": "Der Auftragnehmer erbringt für den Auftraggeber folgende Dienstleistungen: {dienstleistung_beschreibung}. Der Leistungsumfang ergibt sich im Einzelnen aus der Leistungsbeschreibung in Anlage 1.",
          "changeNote": "Initiale Version",
          "parameters": {
            "dienstleistung_beschreibung": {
              "type": "text",
              "label": "Beschreibung der Dienstleistungen",
              "required": true
            }
          },
          "rules": []
        }
      ]
    },
    {
      "title": "Vergütung",
      "jurisdiction": "DE",
      "legalArea": "Dienstleistungsrecht",
      "tags": ["dienstleistungsvertrag", "verguetung"],
      "versions": [
        {
          "content": "Die Vergütung beträgt {verguetung} EUR {verguetung_typ}. Die Zahlung ist innerhalb von {zahlungsfrist} Tagen nach Rechnungseingang fällig.",
          "changeNote": "Initiale Version",
          "parameters": {
            "verguetung": {
              "type": "currency",
              "label": "Vergütung (EUR)",
              "required": true
            },
            "verguetung_typ": {
              "type": "single_choice",
              "label": "Vergütungsart",
              "required": true,
              "options": ["pauschal", "pro Stunde", "pro Monat"]
            },
            "zahlungsfrist": {
              "type": "number",
              "label": "Zahlungsfrist (Tage)",
              "required": false,
              "default": 14
            }
          },
          "rules": []
        }
      ]
    },
    {
      "title": "Laufzeit und Kündigung",
      "jurisdiction": "DE",
      "legalArea": "Dienstleistungsrecht",
      "tags": ["dienstleistungsvertrag", "laufzeit", "kuendigung"],
      "versions": [
        {
          "content": "Der Vertrag beginnt am {vertragsbeginn} und wird auf unbestimmte Zeit geschlossen. Er kann von jeder Partei mit einer Frist von {kuendigungsfrist} zum Monatsende gekündigt werden.",
          "changeNote": "Initiale Version",
          "parameters": {
            "vertragsbeginn": {
              "type": "date",
              "label": "Vertragsbeginn",
              "required": true
            },
            "kuendigungsfrist": {
              "type": "text",
              "label": "Kündigungsfrist",
              "required": false,
              "default": "3 Monate"
            }
          },
          "rules": []
        }
      ]
    },
    {
      "title": "Gewährleistung DV",
      "jurisdiction": "DE",
      "legalArea": "Dienstleistungsrecht",
      "tags": ["dienstleistungsvertrag", "gewaehrleistung"],
      "versions": [
        {
          "content": "Der Auftragnehmer gewährleistet, dass die Dienstleistungen fachgerecht und nach dem aktuellen Stand der Technik erbracht werden. Mängel sind innerhalb von {maengelfrist} Werktagen nach Anzeige zu beseitigen.",
          "changeNote": "Initiale Version",
          "parameters": {
            "maengelfrist": {
              "type": "number",
              "label": "Mängelbeseitigungsfrist (Werktage)",
              "required": false,
              "default": 10
            }
          },
          "rules": []
        }
      ]
    },
    {
      "title": "Vertraulichkeit",
      "jurisdiction": "DE",
      "legalArea": "Dienstleistungsrecht",
      "tags": ["dienstleistungsvertrag", "vertraulichkeit"],
      "versions": [
        {
          "content": "Die Parteien verpflichten sich, alle im Rahmen dieses Vertrages erhaltenen vertraulichen Informationen geheim zu halten. Diese Verpflichtung gilt {vertraulichkeit_dauer} über die Beendigung des Vertrages hinaus.",
          "changeNote": "Initiale Version",
          "parameters": {
            "vertraulichkeit_dauer": {
              "type": "text",
              "label": "Dauer der Vertraulichkeitspflicht nach Vertragsende",
              "required": false,
              "default": "2 Jahre"
            }
          },
          "rules": [
            {
              "type": "requires",
              "targetClauseTitle": "Vertragsgegenstand DV",
              "severity": "hard",
              "message": "Vertraulichkeitsklausel setzt die Vertragsgegenstand-Klausel voraus."
            }
          ]
        }
      ]
    },
    {
      "title": "Haftung DV",
      "jurisdiction": "DE",
      "legalArea": "Dienstleistungsrecht",
      "tags": ["dienstleistungsvertrag", "haftung"],
      "versions": [
        {
          "content": "Die Haftung des Auftragnehmers ist auf {haftungssumme} EUR begrenzt, sofern nicht Vorsatz oder grobe Fahrlässigkeit vorliegt.",
          "changeNote": "Initiale Version",
          "parameters": {
            "haftungssumme": {
              "type": "currency",
              "label": "Haftungshöchstsumme (EUR)",
              "required": true
            }
          },
          "rules": [
            {
              "type": "requires",
              "targetClauseTitle": "Vergütung",
              "severity": "hard",
              "message": "Haftungsbegrenzung setzt die Vergütungsklausel voraus, da die Haftungssumme typischerweise in Relation zur Vergütung steht."
            }
          ]
        }
      ]
    }
  ],
